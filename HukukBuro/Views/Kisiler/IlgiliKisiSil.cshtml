@model IlgiliKisiSilVM


<div class="df fdc panel3 pad5vmin fg radius1em shadow-rightbottom-l maxw1200">
    <h1 class="marb1em mart0">Kişi Bağlantısı Sil</h1>

    <div class="df gap1em marb1rem">
        <a title="Geri" class="ibtn2 secondary xxl fa fa-arrow-left-long" asp-action="ozet" asp-route-id="@Model.KisiId"></a>
    </div>

    <div class="df max600-fdc gap1em">
        <div class="df fdc fg gap1em w50p max600-w100p">
            <div class="input-box pad08em df fwrap">
                <span class="color-inactive">İsim</span>
                <span class="color-active l text-wrap">@Model.IlgiliKisiIsim</span>
            </div>
        </div>
        <div class="df fdc fg gap1em w50p max600-w100p">
            <div class="input-box pad08em df fwrap">
                <span class="color-inactive">Pozisyon</span>
                <span class="color-active l text-wrap">@Model.Pozisyon</span>
            </div>
        </div>
    </div>

    <form class="w100p df fdc jce fg" method="post">
        <input asp-for="Id" hidden />
        <input asp-for="KisiId" hidden />
        <button class="btn1 xxl danger w100p mart1em" type="submit">Sil</button>
    </form>

</div>

