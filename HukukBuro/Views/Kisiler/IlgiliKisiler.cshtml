@model IlgiliKisilerVM

<a asp-action="Ozet" asp-route-id="@Model.Id">Geri</a>
&nbsp;
<a asp-action="IlgiliKisiEkle" asp-route-id="@Model.Id">Yeni bağlantı ekle</a>
&nbsp;
<partial name="_Arama" model="Model" />

@foreach (var oge in Model.Ogeler)
{
    <hr />

    <div>
        <span>@oge.Isim</span>

        @if (!string.IsNullOrWhiteSpace(oge.Pozisyon))
        {
            <span>&nbsp;(@oge.Pozisyon)</span>
        }

        &nbsp;
         
        <a asp-action="IlgiliKisiDuzenle" asp-route-id="@oge.Id">Düzenle</a>
        &nbsp;
        <a asp-action="IlgiliKisiSil" asp-route-id="@oge.Id">Sil</a>
    </div>
}

<partial name="_Sayfa" model="Model" />
