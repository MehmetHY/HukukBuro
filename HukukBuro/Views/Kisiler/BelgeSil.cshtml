@model KisiBelgesiSilVM

<a asp-action="Belgeler" asp-route-id="@Model.KisiId">Geri</a>

<hr />

<div>
    <a href="@Model.Url" target="_blank">@Model.Uzanti</a>
</div>

<div>
    <strong>@Model.Baslik</strong>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Aciklama))
{
    <div>
        @Model.Aciklama
    </div>
}

<div>
    Boyut: @Model.Boyut
</div>

@if (Model.OzelMi)
{
    <div>
        <strong>Özel Belge</strong>
    </div>
}

<hr />

<form method="post">
    <input asp-for="Id" hidden />
    <button type="submit">Sil</button>
</form>
