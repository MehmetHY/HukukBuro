@model EkleVM


<div class="df fdc panel3 pad5vmin fg radius1em shadow-rightbottom-l maxw1200">
    <h1 class="marb1em mart0">Dosya Ekle</h1>

    <div class="df gap1em marb1rem">
        <a title="Geri" class="ibtn2 secondary xxl fa fa-arrow-left-long" asp-action="listele"></a>
    </div>

    <form method="post" class="df fdc gap1em">
        <div asp-validation-summary="ModelOnly" class="color-danger color-inherit-children"></div>

        <div class="input-box df fdc">
            <label class="s color-inactive" asp-for="DosyaNo"></label>
            <input class="input l"  asp-for="DosyaNo" />
            <span class="color-danger text-right" asp-validation-for="DosyaNo"></span>
        </div>

        <div class="input-box df fdc">
            <label class="s color-inactive" asp-for="BuroNo"></label>
            <input class="input l"  asp-for="BuroNo" />
            <span class="color-danger text-right" asp-validation-for="BuroNo"></span>
        </div>

        <div class="input-box df fdc">
            <label class="s color-inactive" asp-for="Konu"></label>
            <input class="input l"  asp-for="Konu" />
            <span class="color-danger text-right" asp-validation-for="Konu"></span>
        </div>

        <div class="input-box df fdc">
            <label class="s color-inactive" asp-for="Aciklama"></label>
            <textarea class="input l" rows="2" asp-for="Aciklama"></textarea>
            <span class="color-danger text-right" asp-validation-for="Aciklama"></span>
        </div>

        <div class="input-box df fdc">
            <label class="s color-inactive" asp-for="DosyaTuruId"></label>
            <select class="input l" asp-for="DosyaTuruId" asp-items="@Model.DosyaTurleri"></select>
            <span class="color-danger text-right" asp-validation-for="DosyaTuruId"></span>
        </div>

        <div class="input-box df fdc">
            <label class="s color-inactive" asp-for="DosyaKategorisiId"></label>
            <select class="input l" asp-for="DosyaKategorisiId" asp-items="@Model.DosyaKategorileri"></select>
            <span class="color-danger text-right" asp-validation-for="DosyaKategorisiId"></span>
        </div>

        <div class="input-box df fdc">
            <label class="s color-inactive" asp-for="DosyaDurumuId"></label>
            <select class="input l" asp-for="DosyaDurumuId" asp-items="@Model.DosyaDurumlari"></select>
            <span class="color-danger text-right" asp-validation-for="DosyaDurumuId"></span>
        </div>

        <div class="input-box df fdc">
            <label class="s color-inactive" asp-for="Mahkeme"></label>
            <input class="input l"  asp-for="Mahkeme" />
            <span class="color-danger text-right" asp-validation-for="Mahkeme"></span>
        </div>

        <div class="input-box df fdc">
            <label class="s color-inactive" asp-for="AcilisTarihi"></label>
            <input class="input l"  asp-for="AcilisTarihi" />
            <span class="color-danger text-right" asp-validation-for="AcilisTarihi"></span>
        </div>

        <button class="btn1 primary xl padv05em mart05em" type="submit">Tamam</button>
    </form>

</div>

