@model SilVM

<div class="df fdc panel3 pad5vmin fg radius1em shadow-rightbottom-l maxw1200">
    <h1 class="marb1em mart0">Görev Sil</h1>

    <div class="df gap1em marb1rem">
        <a title="Geri" class="ibtn2 secondary xxl fa fa-arrow-left-long" asp-action="listele"></a>
    </div>

    <div class="df max600-fdc gap1em">
        <div class="df fdc fg gap1em w50p max600-w100p">
            <div class="input-box pad08em df fwrap">
                <span class="color-inactive">Konu</span>
                <span class="color-active l text-wrap">@Model.Konu</span>
            </div>
            <div class="input-box pad08em df fwrap">
                <span class="color-inactive">Bağlantı</span>
                <span class="tag alternative l">@Model.BaglantiTuru.DisplayName()</span>
            </div>
            <div class="input-box pad08em df fwrap">
                <span class="color-inactive">Durum</span>

                @{
                    var durumClass = Model.Durum switch
                    {
                        Sabit.GorevDurumu.Iptal => "danger",
                        Sabit.GorevDurumu.DevamEdiyor => "warning",
                        Sabit.GorevDurumu.Tamamlandi => "success",
                        _ => string.Empty
                    };
                }

                @if (durumClass != string.Empty)
                {
                    <span class="tag @durumClass l">@Model.Durum</span>
                }

            </div>

            @if (!string.IsNullOrWhiteSpace(Model.KisiIsmi))
            {
                <div class="input-box pad08em df fwrap">
                    <span class="color-inactive">Kişi</span>
                    <span class="color-active l text-wrap">@Model.KisiIsmi</span>
                </div>
            }
            else if (!string.IsNullOrWhiteSpace(Model.DosyaIsmi))
            {
                <div class="input-box pad08em df fwrap">
                    <span class="color-inactive">Dosya</span>
                    <span class="color-active l text-wrap">@Model.DosyaIsmi</span>
                </div>
            }

        </div>
        <div class="df fdc fg gap1em w50p max600-w100p">
            <div class="input-box pad08em df fwrap">
                <span class="color-inactive">Sorumlu</span>
                <span class="color-active l text-wrap">@Model.SorumluIsmi</span>
            </div>
            <div class="input-box pad08em df fwrap">
                <span class="color-inactive">Bitiş Tarih</span>
                <span class="color-active l text-wrap">@Model.BitisTarihi</span>
            </div>
            <div class="input-box pad08em df fwrap">
                <span class="color-inactive">Oluşturma Tarih</span>
                <span class="color-active l text-wrap">@Model.OlusturmaTarihi</span>
            </div>
        </div>
    </div>

    <form class="w100p df fdc jce fg" method="post">
        <input asp-for="Id" hidden />
        <button class="btn1 xxl danger w100p mart1em" type="submit">Sil</button>
    </form>

</div>

