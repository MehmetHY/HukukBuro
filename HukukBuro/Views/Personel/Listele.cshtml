@model ListeleVM

<partial name="_Arama" model="@Model" />

@foreach (var oge in Model.Ogeler)
{
    <hr />

    <div>
        <div>
            <img src="@oge.FotoUrl" width="64" height="64" />
            &nbsp;
            <strong>@oge.TamIsim</strong>
            &nbsp;
            (@oge.Anarol)
            &nbsp;
            <a asp-action="yetkiduzenle" asp-route-id="@oge.Id">Yetkiler</a>
            &nbsp;
            <a asp-action="sil" asp-route-id="@oge.Id">Sil</a>
        </div>
        <div>
            Email:
            &nbsp;
            @oge.Email
        </div>
        <div>
            <small>İlgili Finans: @oge.IlgiliFinansIslemiSayisi</small>
            &nbsp;
            <small>Sorumlu Finans: @oge.SorumluFinansIslemiSayisi</small>
            &nbsp;
            <small>Sorumlu Dosya: @oge.SorumluDosyaSayisi</small>
            &nbsp;
            <small>Sorumlu Görev: @oge.SorumluGorevSayisi</small>
            &nbsp;
            <small>Sorumlu Randevu: @oge.SorumluRandevuSayisi</small>
        </div>
    </div>
}

<hr />
<partial name="_Sayfa" model="@Model" />
